<div class="container">
  <div class="jumbotron">
    <h2 class="ml-1">ユーザー新規登録画面</h2>
  </div>
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:"form-control"%>
    <% if resource.errors.include?(:name) %>
      <p style="color: red;"><%= resource.errors.full_messages_for(:name).first %>
    <% end %>
  </div> 

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"%>
    <% if resource.errors.include?(:email) %>
       <p style="color: red;"><%= resource.errors.full_messages_for(:email).first %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>桁以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control"%>
    <% if resource.errors.include?(:password) %>
       <p style="color: red;"><%= resource.errors.full_messages_for(:password).first %>
  <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control"%>
    <% if resource.errors.include?(:password_confirmation) %>
       <p style="color: red;"><%= resource.errors.full_messages_for(:password_confirmation).first %>
  <% end %>
  </div>

  <div class="actions">
    <%= f.submit "登録",class:"btn btn-primary float-right" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>  