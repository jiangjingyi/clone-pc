<div class="container">
  <div class="jumbotron" >
    <h1 class="ml-1">ユーザ情報編集</h1>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class:"form-control"%>
    <% if resource.errors.include?(:name) %>
      <p style="color: red;"><%= resource.errors.full_messages_for(:name).first %>
  <% end %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"%>
    <% if resource.errors.include?(:email) %>
       <p style="color: red;"><%= resource.errors.full_messages_for(:email).first %>
  <% end %>
  </div>
  <div class="form-group">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile" ,class:"form-control"%>
    <% if resource.errors.include?(:profile) %>
      <p style="color: red;"><%= resource.errors.full_messages_for(:profile).first %>
  <% end %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(変更しなれければ、空白のままにしてください。)</i>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 桁以上</em><br />
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control"%>
    <% if resource.errors.include?(:password) %>
       <p style="color: red;"><%= resource.errors.full_messages_for(:password).first %>
  <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control"%>
    <% if resource.errors.include?(:password_confirmation) %>
       <p style="color: red;"><%= resource.errors.full_messages_for(:password_confirmation).first %>
  <% end %>
  </div>

  <div class="form-group">
    <%= f.label :現在のパスワード %> <i>(変更確認のため、現在のパスワードをご入力ください。)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
    <% if resource.errors.include?(:current_password) %>
       <p style="color: red;"><%= resource.errors.full_messages_for(:current_password).first %>
  <% end %>
  </div>

  
    <%= f.submit "更新" ,class:"btn btn-primary float-right"%>
  
<% end %>

