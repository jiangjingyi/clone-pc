<div class="container">
  <div class="jumbotron" >
    <div class="float-right" style="padding-left: 35%;padding-bottom:2%;">
      <% if user_signed_in? %>
      <h4 class="text-primary bg-info">会員ID：<%= current_user.id%></h4>
      <div class="bg-info">
      <%= link_to "プロフィール", user_path(current_user.id) ,class:"text-black-50 "%> |
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class:"text-black-50" %>
      </div>
      <% end %>
      </div>
    <h1 class="ml-1">処理完了画面</h1>
  </div>  
  <div style="margin-left: 40%;">    
      <p class="m-3" id="notice"><%= notice %></p>
      <p class="m-3" style="padding-bottom:2%;">
        <strong>PCのシリアル番号:</strong>
        <%= @pc.PC_NUM %>
      </p>
      <p class="m-3" style="padding-bottom:2%;">
        <strong>PCの型番:</strong>
        <%= @pc.PC_TYPE %>
      </p>
      <p class="m-3" style="padding-bottom:5%;">
        <strong>PCの名前:</strong>
        <%= @pc.PC_NANE %>
      </p>
  </div>
  <div style="margin-left: 35%;">
    <%= link_to '編集画面に戻る', edit_pc_path(@pc) ,class:"btn btn-default bg-secondary text-light mr-1 float-left" %> |
    <%= link_to '一覧画面に戻る', pcs_path ,class:"btn btn-default bg-secondary text-light mr-1 float-left"%>
  </div>
</div>