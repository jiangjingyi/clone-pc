<div class="container">
    <div class="jumbotron" >
        <div class="float-right" style="padding-left: 40%;padding-bottom:2%;">
            <% if user_signed_in? %>
            <h4 class="text-primary bg-info">会員ID：<%= current_user.id%></h4>
            <div class="bg-info">
            <%= link_to "プロフィール", user_path(current_user.id) ,class:"text-black-50 "%> |
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class:"text-black-50" %>
            </div>
            <% end %>
            </div>
        <h1 class="ml-1">PCデータ変更</h1>
    </div>
    <%= render 'form', pc: @pc %>
    <!-- <%= link_to @pc, method: :delete, data: 
    { confirm: '以下のデータを削除します。よろしいですか？',
      cancel:'キャンセル',
      commit:'OK' },title:"削除の確認" do %>
        <button class="btn btn-primary float-right" style="margin-right: 10px;">削除</button>
    <% end %> -->
    <button class="btn btn-primary float-right" style="margin-right: 10px;" data-toggle="modal" data-target="#confirmDeleteModal">削除</button>
    <%= link_to (pcs_path) do %>
        <button class="btn btn-default bg-secondary text-light mr-1 float-left">戻る</button>
    <%end%>
    
    <!-- モーダル・ダイアログ -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" 
    aria-labelledby="modal" aria-modal="true" style="padding-right:17px;">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" >
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                    <h4 class="modal-title">削除の確認</h4>
                </div>
                <div class="modal-body">
                    <p>以下のデータを削除します。よろしいですか？</p>
                    <p style="margin-top: 15px;">シリアル番号 = <%= @pc.PC_NUM %></p>
                    <p>型番 = <%= @pc.PC_TYPE %></p>
                    <p>名前 = <%= @pc.PC_NANE %></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
                    <%= link_to @pc ,method: :delete do %>
                    <button type="submit" class="btn btn-primary">OK</button>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
